= form_for group do |f|
  - if group.errors.any?
    .chat-group-form__errors
      %h2= "#{group.errors.full_messages.count} errors"
      %ul
        - group.errors.full_messages.each do |message|
          %li= message

          
  .chat-group-form__field
    .chat-group-form__field--left
      = f.label :name, class: 'chat-group-form__label'
    .chat-group-form__field--right
      = f.text_field :name, class: 'chat__group_name chat-group-form__input', placeholder: "Input Group Name"


  .chat-group-form__field.clearfix
    .chat-group-form__field--lefts
      %label.chat-group-form__label{for: "chat_group_Add chat Member"} Add Chat Member
    .chat-group-form__field--right
      .chat-group-form__search.clearfix
        %input#user-search-field.chat-group-form__input{placeholder: "Input the users U wanna add", type: "text"}/
      #user-search-result

  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      %label.chat-group-form__label{for: "chat_group_Chat Member"} Chat Member
    .chat-group-form__field--right
      
      
      #chat-group-users
        .chat-group-user.clearfix.js-chat-member
          %input{name: "group[user_ids][]", type: "hidden", value: current_user.id}
          %p.chat-group-user__name= current_user.name


        - group.users.each do |user| 
          - if user.id != current_user.id
            .chat-group-user.clearfix.js-chat-member
                -# = f.hidden_field :user_ids, value: “#{user.id}“, name: “group[user_ids][]“, class: “add-user-value”
                %input{name: "group[user_ids][]", type: "hidden", value: user.id}
                %p.chat-group-user__name
                  = user.name
                  
                %a.user-search-remove.chat-group-user__btn.chat-group-user__btn--remove.js-remove-btn DELETE


  .chat-group-form__field.clearfix
    .chat-group-form__field--left
    .chat-group-form__field--right
      = f.submit class: 'chat-group-form__action-btn'




